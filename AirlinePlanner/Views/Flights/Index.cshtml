@{
  Layout = "_Layout";
}

<h3>Flights</h3>

  <div>@if(Model.Count != 0)
  {
    <ul>
      @foreach (var flight in Model)
      {
        <li><a href="/flights/@flight.GetId()">@flight.GetName()</a></li>
      }
    </ul>
  }
</div>

  <h4><a href="/flights/new">Add new flight</a></h4>
  <h4><a href="/">Return to home page</a></h4>
