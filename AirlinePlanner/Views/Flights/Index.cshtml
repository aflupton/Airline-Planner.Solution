@{
  Layout = "_Layout";
}

<h2>Flights</h2>

  <div>@if(Model.Count != 0)
  {
    <ul>
      @foreach (var flight in Model)
      {
        <li><a href="/flights/@flight.GetId()">@flight.GetFlightName()</a></li>
      }
    </ul>
  }
</div>

  <h5><a href="/flights/new">Add new flight</a></h5>
  <h5><a href="/flights/deleteall">Delete all flights</a></h5>
  <h5><a href="/">Return to home page</a></h5>
